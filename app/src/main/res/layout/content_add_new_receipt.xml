<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_new_receipt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.moransenyor.cashflow.AddNewReceipt"
    tools:showIn="@layout/activity_add_new_receipt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:text="Price"
            android:hint="Enter Price"
            android:id="@+id/new_receipt_price"
            android:textAlignment="textEnd" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Currency"
            android:hint="Enter Currency"
            android:id="@+id/new_receipt_currency"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Day"
            android:hint="Enter Day"
            android:id="@+id/new_receipt_day"
            android:padding="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:text="/"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month"
            android:hint="Enter Month"
            android:id="@+id/new_receipt_month"
            android:textAlignment="center"
            android:padding="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:text="/"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year"
            android:hint="Enter Year"
            android:id="@+id/new_receipt_year"
            android:padding="0dp"
            android:layout_weight="2" />
        <Button
            android:text="Today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_receipt_today_button"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Product"
            android:hint="Enter Product"
            android:id="@+id/new_receipt_product"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vendor"
            android:hint="Enter Vendor"
            android:id="@+id/new_receipt_vendor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Category"
            android:hint="Enter Category"
            android:id="@+id/new_receipt_category"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Behalf"
            android:hint="Bought For"
            android:id="@+id/new_receipt_behalf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="file:///sd_card/camera/image_112233.jpg"
            android:hint="Choose an Image for the receipt"
            android:id="@+id/new_receipt_image"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag; Another one; Some other; Last"
            android:hint="Tags (seperated with a ; semicolon)"
            android:id="@+id/new_receipt_tags"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some note about this purchase"
            android:hint="Enter Notes"
            android:id="@+id/new_receipt_notes"/>
    </LinearLayout>
</LinearLayout>
